<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Information</title>
  </head>
  <body>
    <div class="contcon">
      <h1>Let's get in touch</h1>
      <form class="form" id="contactForm" action="" method="post">
        <input class="loginInput" type="text" name="full-name" id="full-name" placeholder="FULL NAME" />
        <input class="loginInput" type="tel" name="phone" id="phone" placeholder="PHONE NUMBER" />
        <input class="loginInput" type="email" name="email" id="email" placeholder="EMAIL" />
        <textarea type="text" name="message" id="message" placeholder="MESSAGE"></textarea>
        <button class="loginInput" type="submit" class="red-button">SEND</button>
      </form>
    </div>
  </body>
</html>